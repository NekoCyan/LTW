@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products Manager";
    ViewBag.ExcludeNiceSelect = true;
}

<br />
<div class="container">
    <p>
        <a asp-controller="Dashboard" asp-action="Index"
            class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
            << Back to Dashboard </a>
    </p>
    <h3 id="products_count"></h3>
    <table class="table">
        <thead>
            <th>Tên</th>
            <th>Giá cả</th>
            <th>Thể loại</th>
            <th>Ảnh</th>
            <th>Tùy chỉnh</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width: 20%">@item.Name</td>
                    <td style="width: 10%">$@item.Price</td>
                    <td style="width: 15%">@item.Category.Name</td>
                    <td style="align-content: center; width: 25%">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                @for (int i = 0; i < item.ImageUrls.Count; i++)
                                {
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <img style="min-height: 150px; max-height: 150px; width: 150px; margin: auto;"
                                            src="@item.ImageUrls[i]" class="d-block" alt="">
                                    </div>
                                }
                            </div>
                            <a style="color: black;" class="carousel-control-prev" href="#carouselExampleControls"
                                role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </td>
                    <td style="width: 25%">
                        <a asp-action="Upsert" asp-route-id="@item.Id">Edit</a> |
                        <a href="#" class="text-danger" onclick="xoa(@item.Id, $(this))">
                            Delete
                            Directly
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a asp-action="Upsert" class="btn btn-primary">Thêm mới</a>
    <hr />
    <div style="text-align: center;">
        <a style="text-align: center;" asp-area="Customer" asp-controller="Home" asp-action="Index">Back to Customer</a>
    </div>
    <br />
</div>

<script>
    function xoa(id, row) {
        $.ajax({
            url: `${window.location.href.replace(/#$/, '')}/Delete/${id}`,
            type: "POST",
            success: function (data) {
                $(row).closest('tr').remove();
                toastr.success(`${data.message}`);
                updateCount();
            },
        });
    }

    function updateCount() {
        const tbody = document.querySelector('tbody');
        const rows = tbody.querySelectorAll('tr');
        const rowCount = rows.length;

        const h3 = document.querySelector('#products_count');
        h3.innerText = `Có tổng ${rowCount} sản phẩm.`;
    }
    updateCount();
</script>