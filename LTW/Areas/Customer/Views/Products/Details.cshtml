@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container d-flex flex-row">
    <div class="col-md-5">
        @*<img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">*@
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < @Model.ImageUrls.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img style="height: 500px; width: 400px; margin: auto; object-fit:cover;" src="@Model.ImageUrls[i]" class="d-block" alt="">
                    </div>
                }
            </div>
            <a style="color: black;" class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-7">
        <h2>@Model.Name</h2>
        <p>@Model.Description</p>
        <p>Price: @Model.Price</p>
        <p>Category: @Model.Category.Name</p>

        <a class="btn btn-primary addtocart" itemid="@Model.Id">Add To Cart</a>
        <br />
        <br />
        <div class="form-group d-flex flex-row">
            <form method="post" asp-action="PrevProduct" asp-route-id="@Model.Id">
                <input type="submit" value="<< Previous Product" class="btn btn-secondary" />
            </form>
            &#160;
            <form method="post" asp-action="NextProduct" asp-route-id="@Model.Id">
                <input type="submit" value="Next Product >>" class="btn btn-secondary" />
            </form>
        </div>
    </div>
</div>