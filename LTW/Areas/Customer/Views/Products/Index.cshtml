@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<!-- inner page section -->
<section class="inner_page_head">
    <div class="container_fuild">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <h3>Product Grid</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end inner page section -->
<!-- product section -->
<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our <span>products</span>
            </h2>
        </div>
        <div class="row" id="allproducts">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="box">
                        <div class="option_container">
                            <div class="options">
                                <a class="option1 addtocart" itemid="@item.Id">
                                    Add To Cart
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="option2">
                                    Details
                                </a>
                            </div>
                        </div>
                        <div class="img-box">
                            <img src="@item.ImageUrls[0]" alt="" />
                        </div>
                        <div class="detail-box">
                            <h5>
                                @item.Name
                            </h5>
                            <h6>
                                $@item.Price
                            </h6>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="btn-box">
            <a asp-controller="Home" asp-action="Products">
                View All products
            </a>
        </div>
    </div>
</section>
<!-- end product section -->